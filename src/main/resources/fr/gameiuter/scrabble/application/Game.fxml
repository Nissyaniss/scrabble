<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="980.0"
            prefWidth="1880.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.gameiuter.scrabble.controller.FXGameController">
    <left>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelPlayer1" text="Joueur 1 :">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </Label>
                <Label text="Points :">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </left>
    <right>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelPlayer2" text="Joueur 2 :">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </Label>
                <Label text="Points :">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </right>
    <top>
        <VBox alignment="CENTER" prefHeight="87.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Joueur actuel :"/>
                <Label alignment="CENTER" text="Tours :"/>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane fx:id="board" alignment="CENTER">
                </GridPane>
                <HBox fx:id="rack" alignment="CENTER" maxHeight="80.0" maxWidth="392.0" minHeight="80.0"
                      minWidth="392.0" prefHeight="80.0" prefWidth="392.0" spacing="5.0">
                    <effect>
                        <DropShadow blurType="GAUSSIAN" height="0.0" radius="0" width="15.0"/>
                    </effect>
                    <VBox.margin>
                        <Insets bottom="15.0" top="15.0"/>
                    </VBox.margin>
                </HBox>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="160.0" spacing="5.0">
                    <children>
                        <Button fx:id="confirm" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                onAction="#handleConfirm" text="Valider"/>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Passer son tour"/>
                        <Button fx:id="toggleModeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                onAction="#toggleMode" text="Changer des lettres"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
